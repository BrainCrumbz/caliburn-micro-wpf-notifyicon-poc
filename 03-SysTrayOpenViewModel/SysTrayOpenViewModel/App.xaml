<Application x:Class="SysTrayOpenViewModel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SysTrayOpenViewModel"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!-- define Caliburn.Micro app-wide bootstrapper -->
                    <local:Bootstrapper x:Key="Bootstrapper" />
                </ResourceDictionary>
                <!-- merge NotifyIcon and related stuff into the application -->
                <ResourceDictionary Source="SystemTrayResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
